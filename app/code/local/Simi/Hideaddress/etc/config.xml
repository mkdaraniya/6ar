<config>
    <modules>
        <Simi_Hideaddress>
            <version>0.1.0</version>
        </Simi_Hideaddress>
    </modules>
    <frontend>
        <routers>
            <hideaddress>
                <use>standard</use>
                <args>
                    <module>Simi_Hideaddress</module>
                    <frontName>hideaddress</frontName>
                </args>
            </hideaddress>
        </routers>
        <layout>
            <updates>
                <hideaddress>
                    <file>hideaddress.xml</file>
                </hideaddress>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Hideaddress>
                    <files>
                        <default>Simi_Hideaddress.csv</default>
                    </files>
                </Simi_Hideaddress>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <hideaddressadmin>
                <use>admin</use>
                <args>
                    <module>Simi_Hideaddress</module>
                    <frontName>hideaddressadmin</frontName>
                </args>
            </hideaddressadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <hideaddress>
                    <file>hideaddress.xml</file>
                </hideaddress>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_Hideaddress>
                    <files>
                        <default>Simi_Hideaddress.csv</default>
                    </files>
                </Simi_Hideaddress>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <hideaddress>
                <class>Simi_Hideaddress_Model</class>
                <resourceModel>hideaddress_mysql4</resourceModel>
            </hideaddress>
            <hideaddress_mysql4>
                <class>Simi_Hideaddress_Model_Mysql4</class>
                <entities>
                    <hideaddress>
                        <table>hideaddress</table>
                    </hideaddress>
                </entities>
            </hideaddress_mysql4>
            <connector>
            <rewrite>
            <observer>Simi_Hideaddress_Model_Observer</observer>    
            </rewrite>    
            </connector>
            <paypalmobile>
            <rewrite>
            <observer>Simi_Hideaddress_Model_Overrideobserver</observer>    
            </rewrite>    
            </paypalmobile>
        </models>
        <resources>
            <hideaddress_setup>
                <setup>
                    <module>Simi_Hideaddress</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </hideaddress_setup>
            <hideaddress_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </hideaddress_write>
            <hideaddress_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </hideaddress_read>
        </resources>
        <blocks>
            <hideaddress>
                <class>Simi_Hideaddress_Block</class>
            </hideaddress>
        </blocks>
        <helpers>
            <hideaddress>
                <class>Simi_Hideaddress_Helper</class>
            </hideaddress>
        </helpers>       
        <events>
            <connector_checkout_get_order_config_total>
                <observers>
                    <connector_checkout_get_order_config_total_condition>
                        <class>hideaddress/observer</class>
                        <method>addCondition</method>
                    </connector_checkout_get_order_config_total_condition>
                </observers>
            </connector_checkout_get_order_config_total>
            <connector_checkout_get_order_config>
                <observers>
                    <hideaddress_before_get_order_config>
                        <class>hideaddress/observer</class>
                        <method>changeData</method>
                    </hideaddress_before_get_order_config>
                </observers>
            </connector_checkout_get_order_config>
            <connector_customer_save_address>
                <observers>
                    <hideaddress_before_customer_save_address>
                        <class>hideaddress/observer</class>
                        <method>changeDataAddress</method>
                    </hideaddress_before_customer_save_address>
                </observers>
            </connector_customer_save_address>
        </events>                
    </global>
    <default>
        <hideaddress>        
            <field_hide_management>
                <firstname>2</firstname>
                <lastname>2</lastname>
                <email>2</email>
                <company>2</company>
                <street>2</street>
                <country>2</country>
                <state>2</state>
                <city>2</city>
                <zipcode>2</zipcode>
                <telephone>2</telephone>
                <fax>2</fax>
                <prefix>2</prefix>
<!--                <middlename>2</middlename>-->
                <suffix>2</suffix>
                <birthday>2</birthday>
            <gender>2</gender>
            <taxvat>2</taxvat>
         </field_hide_management>
          		
        </hideaddress>
    </default>
</config>