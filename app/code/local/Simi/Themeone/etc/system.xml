<config>
    <tabs>
        <simi translate="label">
            <label>FOCUS by itcan</label>
            <sort_order>400</sort_order>
        </simi>
    </tabs>
    <sections>
        <themeone translate="label" module="themeone">
            <class>separator-top</class>
            <label>Matrix Theme</label>
            <tab>simi</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>        
                        <enable translate="label">
                            <label>Enable Matrix Theme</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>If you disable this plugin, your app will be changed into previous interface.</comment>
                        </enable>
                        <disable translate="label">
                            <label>Disable Matrix Theme</label>
                            <frontend_type>select</frontend_type>
                            <sort_order>1</sort_order>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>0</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment></comment>
                        </disable>
                    </fields>
                </general>
            </groups>
        </themeone>
    </sections>
</config>