<config>
    <modules>
        <Simi_SimiAvenue>
            <version>0.1.0</version>
        </Simi_SimiAvenue>
    </modules>
    <frontend>
        <routers>
            <simiavenue>
                <use>standard</use>
                <args>
                    <module>Simi_SimiAvenue</module>
                    <frontName>simiavenue</frontName>
                </args>
            </simiavenue>
        </routers>
        <layout>
            <updates>
                <simiavenue>
                    <file>simiavenue.xml</file>
                </simiavenue>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_SimiAvenue>
                    <files>
                        <default>Simi_SimiAvenue.csv</default>
                    </files>
                </Simi_SimiAvenue>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <simiavenueadmin>
                <use>admin</use>
                <args>
                    <module>Simi_SimiAvenue</module>
                    <frontName>simiavenueadmin</frontName>
                </args>
            </simiavenueadmin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <simiavenue>
                    <file>simiavenue.xml</file>
                </simiavenue>
            </updates>
        </layout>
        <translate>
            <modules>
                <Simi_SimiAvenue>
                    <files>
                        <default>Simi_SimiAvenue.csv</default>
                    </files>
                </Simi_SimiAvenue>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <simiavenue>
                <class>Simi_SimiAvenue_Model</class>
                <resourceModel>simiavenue_mysql4</resourceModel>
            </simiavenue>
            <simiavenue_mysql4>
                <class>Simi_SimiAvenue_Model_Mysql4</class>
                <entities>
                    <simiavenue>
                        <table>simiavenue</table>
                    </simiavenue>
                </entities>
            </simiavenue_mysql4>
        </models>
        <resources>
            <simiavenue_setup>
                <setup>
                    <module>Simi_SimiAvenue</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </simiavenue_setup>
            <simiavenue_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </simiavenue_write>
            <simiavenue_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </simiavenue_read>
        </resources>
        <blocks>
            <simiavenue>
                <class>Simi_SimiAvenue_Block</class>
            </simiavenue>
        </blocks>
        <helpers>
            <simiavenue>
                <class>Simi_SimiAvenue_Helper</class>
            </simiavenue>
        </helpers>
       <events>
            <payment_method_is_active>
                <observers>
                    <simi_ccavenue_payment_observers>
                        <type>singleton</type>
                        <class>simiavenue/observer</class>
                        <method>paymentMethodIsActive</method>
                    </simi_ccavenue_payment_observers>
                </observers>
            </payment_method_is_active>
			<simicart_after_place_order>
                <observers>
                    <simi_ccavenue_after_place_order>
                        <type>singleton</type>
                        <class>simiavenue/observer</class>
                        <method>afterPlaceOrder</method>
                    </simi_ccavenue_after_place_order>
                </observers>
            </simicart_after_place_order>		
			<simi_add_payment_method>
				<observers>
					<ccavenue_add_payment_method>
						<class>simiavenue/observer</class>
						<method>addPayment</method>
					</ccavenue_add_payment_method>
				</observers>
            </simi_add_payment_method>
        </events>
    </global>
	<default>
		<payment>
			<simiavenue>
				<model>simiavenue/payment</model>
				<active>1</active>
				<order_status>pending</order_status>
                <payment_success_status>processing</payment_success_status>
				<title>CC Avenue</title>
				<payment_action>sale</payment_action>
				<submit_url>https://www.ccavenue.com/shopzone/cc_details.jsp</submit_url>
				<merchant_id></merchant_id>
				<working_key></working_key>
                <access_code></access_code>
				<enable_auth_query>0</enable_auth_query>
				<allowspecific>0</allowspecific>
				<sort_order>0</sort_order>
			</simiavenue>
		</payment>
	</default>
</config>