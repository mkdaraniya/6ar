<config>
    <modules>
        <Magestore_RewardPoints>
            <version>0.2.3</version>
        </Magestore_RewardPoints>
        <Magestore_Loyalty>
            <version>0.1.0</version>
        </Magestore_Loyalty>
    </modules>
    <frontend>
        <secure_url>
            <loyalty_passbook>/loyalty/passbook</loyalty_passbook>
        </secure_url>
        <routers>
            <loyalty>
                <use>standard</use>
                <args>
                    <module>Magestore_Loyalty</module>
                    <frontName>loyalty</frontName>
                </args>
            </loyalty>
            <rewardpoints>
                <use>standard</use>
                <args>
                    <module>Magestore_RewardPoints</module>
                    <frontName>rewardpoints</frontName>
                </args>
            </rewardpoints>
        </routers>
        <translate>
            <modules>
                <Magestore_Loyalty>
                    <files>
                        <default>Magestore_Loyalty.csv</default>
                    </files>
                </Magestore_Loyalty>
            </modules>
        </translate>
        <events>
            <connector_catalog_get_product_detail_product_detail>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>productDetailRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_catalog_get_product_detail_product_detail>
            <connector_checkout_get_order_config_total>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderConfigRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_checkout_get_order_config_total>
            <connector_checkout_save_shipping_method_total>
                <observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderConfigRewardPoints</method>
                    </loyalty_frontend_observers>
                </observers>
            </connector_checkout_save_shipping_method_total>
            <simicart_after_place_order>
            	<observers>
                    <loyalty_frontend_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>checkoutOrderPlaceAfter</method>
                    </loyalty_frontend_observers>
                </observers>
            </simicart_after_place_order>
        </events>
    </frontend>
    <admin>
        <routers>
            <adminhtml> 
                <args> 
                    <modules> 
                        <Magestore_RewardPoints after="Mage_Adminhtml">Magestore_RewardPoints_Adminhtml</Magestore_RewardPoints>
                    </modules> 
                    <modules> 
                        <Magestore_Loyalty after="Mage_Adminhtml">Magestore_Loyalty_Adminhtml</Magestore_Loyalty>
                    </modules> 
                </args> 
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <rewardpoints>
                    <file>rewardpoints.xml</file>
                </rewardpoints>
                <loyalty>
                    <file>loyalty.xml</file>
                </loyalty>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_RewardPoints>
                    <files>
                        <default>Magestore_RewardPoints.csv</default>
                    </files>
                </Magestore_RewardPoints>
                <Magestore_Loyalty>
                    <files>
                        <default>Magestore_Loyalty.csv</default>
                    </files>
                </Magestore_Loyalty>
            </modules>
        </translate>
        <events>
            <paypal_prepare_line_items>
                <observers>
                    <rewardpoints_adminhtml_observers>
                        <type>singleton</type>
                        <class>rewardpoints/adminhtml_observer</class>
                        <method>paypalPrepareLineItems</method>
                    </rewardpoints_adminhtml_observers>
                </observers>
            </paypal_prepare_line_items>
            <customer_save_after>
                <observers>
                    <rewardpoints_adminhtml_observers>
                        <type>singleton</type>
                        <class>rewardpoints/adminhtml_observer</class>
                        <method>customerSaveAfter</method>
                    </rewardpoints_adminhtml_observers>
                </observers>
            </customer_save_after>
            <sales_order_load_after>
                <observers>
                    <rewardpoints_adminhtml_observers>
                        <type>singleton</type>
                        <class>rewardpoints/adminhtml_observer</class>
                        <method>salesOrderLoadAfter</method>
                    </rewardpoints_adminhtml_observers>
                </observers>
            </sales_order_load_after>
            <sales_order_creditmemo_refund>
                <observers>
                    <rewardpoints_adminhtml_observers>
                        <type>singleton</type>
                        <class>rewardpoints/adminhtml_observer</class>
                        <method>salesOrderCreditmemoRefund</method>
                    </rewardpoints_adminhtml_observers>
                </observers>
            </sales_order_creditmemo_refund>
        </events>
    </adminhtml>
    <global>
        <models>
            <rewardpoints>
                <class>Magestore_RewardPoints_Model</class>
                <resourceModel>rewardpoints_mysql4</resourceModel>
            </rewardpoints>
            <rewardpoints_mysql4>
                <class>Magestore_RewardPoints_Model_Mysql4</class>
                <entities>
                    <customer>
                        <table>rewardpoints_customer</table>
                    </customer>
                    <rate>
                        <table>rewardpoints_rate</table>
                    </rate>
                    <transaction>
                        <table>rewardpoints_transaction</table>
                    </transaction>
                </entities>
            </rewardpoints_mysql4>
            <loyalty>
                <class>Magestore_Loyalty_Model</class>
                <resourceModel>loyalty_mysql4</resourceModel>
            </loyalty>
            <loyalty_mysql4>
                <class>Magestore_Loyalty_Model_Mysql4</class>
                <entities>
                    <loyalty>
                        <table>loyalty</table>
                    </loyalty>
                </entities>
            </loyalty_mysql4>
            <connector>
                <rewrite>
                    <customer>Magestore_Loyalty_Model_Customer</customer>
                </rewrite>
            </connector>
        </models>
        <resources>
            <loyalty_setup>
                <setup>
                    <module>Magestore_Loyalty</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </loyalty_setup>
            <loyalty_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </loyalty_write>
            <loyalty_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </loyalty_read>
            <rewardpoints_setup>
                <setup>
                    <module>Magestore_RewardPoints</module>
                    <class>Magestore_RewardPoints_Model_Mysql4_Setup</class>
                </setup>
            </rewardpoints_setup>
        </resources>
        <blocks>
            <rewardpoints>
                <class>Magestore_RewardPoints_Block</class>
            </rewardpoints>
            <loyalty>
                <class>Magestore_Loyalty_Block</class>
            </loyalty>
        </blocks>
        <helpers>
            <rewardpoints>
                <class>Magestore_RewardPoints_Helper</class>
            </rewardpoints>
            <loyalty>
                <class>Magestore_Loyalty_Helper</class>
            </loyalty>
        </helpers>
        <events>
            <!-- Rewardpoints Earning Total -->
            <sales_quote_collect_totals_after>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>loyalty/observer</class>
                        <method>salesQuoteCollectTotalsAfter</method>
                    </rewardpoints_observers>
                </observers>
            </sales_quote_collect_totals_after>
            <!-- Rewardpoints Before and after place order -->
            <sales_model_service_quote_submit_before>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderPlaceBefore</method>
                    </rewardpoints_observers>
                </observers>
            </sales_model_service_quote_submit_before>
            <sales_model_service_quote_submit_after>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderPlaceAfter</method>
                    </rewardpoints_observers>
                </observers>
            </sales_model_service_quote_submit_after>
            
            <!-- Rewardpoints process order -->
            <sales_order_save_after>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderSaveAfter</method>
                    </rewardpoints_observers>
                </observers>
            </sales_order_save_after>
            <sales_order_invoice_save_after>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderInvoiceSaveAfter</method>
                    </rewardpoints_observers>
                </observers>
            </sales_order_invoice_save_after>
            
            <adminhtml_sales_order_creditmemo_register_before>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderCreditmemoRegisterBefore</method>
                    </rewardpoints_observers>
                </observers>
            </adminhtml_sales_order_creditmemo_register_before>
            <sales_order_creditmemo_save_after>
                <observers>
                    <rewardpoints_observers>
                        <type>singleton</type>
                        <class>rewardpoints/observer</class>
                        <method>salesOrderCreditmemoSaveAfter</method>
                    </rewardpoints_observers>
                </observers>
            </sales_order_creditmemo_save_after>
        </events>
        <sales>
            <quote>
                <totals>
                    <rewardpoints_label>
                        <class>loyalty/total_quote_label</class>
                        <before>nominal,subtotal</before>
                        <admin_renderer>rewardpoints/adminhtml_cart_label</admin_renderer>
                    </rewardpoints_label>
                    <rewardpoints>
                        <class>rewardpoints/total_quote_point</class>
                        <after>wee,discount</after>
                        <before>tax</before>
                    </rewardpoints>
                    <rewardpoints_after_tax>
                        <class>rewardpoints/total_quote_pointaftertax</class>
                        <after>tax</after>
                        <before>grand_total</before>
                    </rewardpoints_after_tax>
                    <!-- Refine shipping order -->
                    <freeshipping>
                        <before>tax_subtotal,rewardpoints_freeshipping,shipping</before>
                    </freeshipping>
                    <rewardpoints_freeshipping>
                        <class>rewardpoints/total_quote_freeshipping</class>
                        <after>subtotal,freeshipping,tax_subtotal</after>
                        <before>shipping,grand_total</before>
                    </rewardpoints_freeshipping>
                    <shipping>
                        <after>subtotal,freeshipping,rewardpoints_freeshipping,tax_subtotal</after>
                    </shipping>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <rewardpoints>
                        <class>rewardpoints/total_invoice_point</class>
                        <after>grand_total</after>
                    </rewardpoints>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <rewardpoints>
                        <class>rewardpoints/total_creditmemo_point</class>
                        <after>grand_total</after>
                    </rewardpoints>
                </totals>
            </order_creditmemo>
        </sales>
        <pdf>
            <totals>
                <rewardpoints translate="title">
                    <title>Use points on spend</title>
                    <source_field>rewardpoints_discount</source_field>
                    <model>rewardpoints/total_pdf_point</model>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>251</sort_order>
                </rewardpoints>
            </totals>
        </pdf>
        <fieldsets>
            <sales_convert_quote_address>
                <rewardpoints_earn>
                    <to_order>*</to_order>
                </rewardpoints_earn>
                <rewardpoints_spent>
                    <to_order>*</to_order>
                </rewardpoints_spent>
                <rewardpoints_base_discount>
                    <to_order>*</to_order>
                </rewardpoints_base_discount>
                <rewardpoints_discount>
                    <to_order>*</to_order>
                </rewardpoints_discount>
                <rewardpoints_base_amount>
                    <to_order>*</to_order>
                </rewardpoints_base_amount>
                <rewardpoints_amount>
                    <to_order>*</to_order>
                </rewardpoints_amount>
                <!--rewardpoints_base_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_base_hidden_tax_amount>
                <rewardpoints_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_hidden_tax_amount>
                <rewardpoints_base_shipping_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_base_shipping_hidden_tax_amount>
                <rewardpoints_shipping_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_shipping_hidden_tax_amount-->
            </sales_convert_quote_address>
            <sales_convert_quote_item>
                <rewardpoints_earn>
                    <to_order_item>*</to_order_item>
                </rewardpoints_earn>
                <rewardpoints_spent>
                    <to_order_item>*</to_order_item>
                </rewardpoints_spent>
                <rewardpoints_base_discount>
                    <to_order_item>*</to_order_item>
                </rewardpoints_base_discount>
                <rewardpoints_discount>
                    <to_order_item>*</to_order_item>
                </rewardpoints_discount>
                <!--rewardpoints_base_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_base_hidden_tax_amount>
                <rewardpoints_hidden_tax_amount>
                    <to_order>*</to_order>
                </rewardpoints_hidden_tax_amount-->
            </sales_convert_quote_item>
        </fieldsets>
        
        <!-- Reward Points Action Config -->
        <rewardpoints>
            <actions>
                <!-- Sales - Earning Actions -->
                <earning_invoice>rewardpoints/action_earning_invoice</earning_invoice>
                <earning_creditmemo>rewardpoints/action_earning_creditmemo</earning_creditmemo>
                <earning_cancel>rewardpoints/action_earning_cancel</earning_cancel>
                
                <!-- Sales - Spending Actions -->
                <spending_order>rewardpoints/action_spending_order</spending_order>
                <spending_creditmemo>rewardpoints/action_spending_creditmemo</spending_creditmemo>
                <spending_cancel>rewardpoints/action_spending_cancel</spending_cancel>
                
                <!-- Admin - Change by Custom -->
                <admin>rewardpoints/action_admin</admin>
            </actions>
        </rewardpoints>
        <template>
            <email>
                <rewardpoints_email_update_balance translate="label" module="rewardpoints">
                    <label>Email template sent to customer when updating point balance</label>
                    <file>rewardpoints/update_balance.html</file>
                    <type>html</type>
                </rewardpoints_email_update_balance>
                <rewardpoints_email_before_expire_transaction translate="label" module="rewardpoints">
                    <label>Email template sent to customer before a transaction expires</label>
                    <file>rewardpoints/before_expire_transaction.html</file>
                    <type>html</type>
                </rewardpoints_email_before_expire_transaction>
            </email>
        </template>
    </global>
    <default>
        <sales>
            <totals_sort>
                <rewardpoints>34</rewardpoints>
                <rewardpoints_after_tax>44</rewardpoints_after_tax>
            </totals_sort>
        </sales>
        <rewardpoints>
            <general>
                <enable>1</enable>
                <show_policy_menu>0</show_policy_menu>
            </general>
            <loyalty>
                <cart>1</cart>
            </loyalty>
            <earning>
                <by_tax>0</by_tax>
                <by_shipping>0</by_shipping>
                <rounding_method>round</rounding_method>
                <order_invoice>1</order_invoice>
                <order_cancel_state>closed,canceled</order_cancel_state>
            </earning>
            <spending>
                <!--discount_before_tax>0</discount_before_tax-->
                <spend_for_tax>1</spend_for_tax>
                <spend_for_shipping>1</spend_for_shipping>
                <spend_for_shipping_tax>1</spend_for_shipping_tax>
                <order_refund_state>closed,canceled</order_refund_state>
            </spending>
            <display>
                <toplink>1</toplink>
                <product>1</product>
                <minicart>1</minicart>
            </display>
            <email>
                <enable>1</enable>
                <sender>general</sender>
                <update_balance>rewardpoints_email_update_balance</update_balance>
                <before_expire_transaction>rewardpoints_email_before_expire_transaction</before_expire_transaction>
            </email>
            <passbook>
                <logo_text>SimiCart</logo_text>
                <description>Magento in a mobile app</description>
                <organization>SimiCart</organization>
                <foreground>FFFFFF</foreground>
                <background>FF6600</background>
                <icon>default/icon@2x.png</icon>
                <logo>default/logo@2x.png</logo>
                <strip>default/strip@2x.png</strip>
                <latitude>21.001732</latitude>
                <longitude>105.824010</longitude>
                <relevant>Nearby Magestore's Office</relevant>
                <app_url>simicart://redeem</app_url>
                <app_id>720063746</app_id>
                <type_id>pass.com.simicart.loyalty</type_id>
                <team_id>88X6EP4WFV</team_id>
                <!--
                <certificate>default/pass.com.simicart.loyalty.p12</certificate>
                <password>simicart</password>
                <wwdr>default/AppleWWDRCA.pem</wwdr>
                -->
            </passbook>
        </rewardpoints>
    </default>
    <crontab>
        <jobs>
            <rewardpoints>
                <schedule>
                    <cron_expr>10 * * * *</cron_expr>
                </schedule>
                <run>
                    <model>rewardpoints/cron::processTransactions</model>
                </run>
            </rewardpoints>
        </jobs>
    </crontab>
</config>