<config>
    <default>
        <productlabel>
            <general>
                <enable>1</enable>
            </general>
        </productlabel>
        
    </default>
    <modules>
        <Magestore_Productlabel>
            <version>0.1.2</version>
        </Magestore_Productlabel>
    </modules>
    <frontend>
        <routers>
            <productlabel>
                <use>standard</use>
                <args>
                    <module>Magestore_Productlabel</module>
                    <frontName>productlabel</frontName>
                </args>
            </productlabel>
        </routers>
        <layout>
            <updates>
                <productlabel>
                    <file>productlabel.xml</file>
                </productlabel>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Productlabel>
                    <files>
                        <default>Magestore_Productlabel.csv</default>
                    </files>
                </Magestore_Productlabel>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
            <adminhtml> 
                <args> 
                    <modules> 
                        <Magestore_Productlabel after="Mage_Adminhtml">Magestore_Productlabel_Adminhtml</Magestore_Productlabel>
                    </modules> 
                </args> 
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <productlabel>
                    <file>productlabel.xml</file>
                </productlabel>
            </updates>
        </layout>
        <translate>
            <modules>
                <Magestore_Productlabel>
                    <files>
                        <default>Magestore_Productlabel.csv</default>
                    </files>
                </Magestore_Productlabel>
            </modules>
        </translate>
        <events>
            <catalog_product_save_after>
                <observers>
                    <productlabel_observers>
                        <type>singleton</type>
                        <class>productlabel/observer</class>
                        <method>saveProductLabelTabData</method>
                    </productlabel_observers>
                </observers>
            </catalog_product_save_after>
            <catalog_product_load_after>
                <observers>
                    <productlabel_observers>
                        <type>singleton</type>
                        <class>productlabel/observer</class>
                        <method>viewProductLabelTabData</method>
                    </productlabel_observers>
                </observers>
            </catalog_product_load_after>
			<catalogrule_after_apply>
                <observers>
                    <productlabel_observers>
                        <type>singleton</type>
                        <class>productlabel/observer</class>
                        <method>catalogRuleApply</method>
                    </productlabel_observers>
                </observers>
            </catalogrule_after_apply>
        </events>
    </adminhtml>   
    <global>
        <models>
            <productlabel>
                <class>Magestore_Productlabel_Model</class>
                <resourceModel>productlabel_mysql4</resourceModel>
            </productlabel>
            <productlabel_mysql4>
                <class>Magestore_Productlabel_Model_Mysql4</class>
                <entities>
                    <productlabel>
                        <table>product_label</table>
                    </productlabel>
                    <productlabelentity>
                        <table>product_label_entity</table>
                    </productlabelentity>
                    <productlabelentity>
                        <table>product_label_entity</table>
                    </productlabelentity>
                    <productlabelentityvalue>
                        <table>product_label_entity_value</table>
                    </productlabelentityvalue>
                    <productlabelvalue>
                        <table>product_label_value</table>
                    </productlabelvalue>
                    <productlabelflatdata>
                        <table>product_label_flat_data</table>
                    </productlabelflatdata>
                </entities>
            </productlabel_mysql4>
        </models>
        <resources>
            <productlabel_setup>
                <setup>
                    <module>Magestore_Productlabel</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </productlabel_setup>
            <productlabel_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </productlabel_write>
            <productlabel_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </productlabel_read>
        </resources>
        <blocks>
            <productlabel>
                <class>Magestore_Productlabel_Block</class>
            </productlabel>
        </blocks>
        <helpers>
            <productlabel>
                <class>Magestore_Productlabel_Helper</class>
            </productlabel>
        </helpers>
        <index>
            <indexer>
                <product_label_indexer>
                    <model>productlabel/indexer_productlabel</model>
                </product_label_indexer>
            </indexer>
        </index>
         <events>
            <connector_catalog_get_category_products_product_detail>
                <observers>
                    <productlabel_product_category_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setProductCategory</method>
                    </productlabel_product_category_product_detail>
                </observers>
            </connector_catalog_get_category_products_product_detail>
            <connector_catalog_get_all_products_product_detail>
                <observers>
                    <productlabel_product_category_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setProducts</method>
                    </productlabel_product_category_product_detail>
                </observers>
            </connector_catalog_get_all_products_product_detail>
            <connector_catalog_get_product_detail_product_detail>
                <observers>
                    <productlabel_product_category_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setProduct</method>
                    </productlabel_product_category_product_detail>
                </observers>
            </connector_catalog_get_product_detail_product_detail>
			<connector_catalog_search_products_product_detail>
                <observers>
                    <productlabel_search_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setSearchProduct</method>
                    </productlabel_search_product_detail>
                </observers>
            </connector_catalog_search_products_product_detail>	
			<spotproduct_index_get_spot_products_product_detail>
				<observers>
                    <productlabel_connector_catalog_search_products_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setSpotProduct</method>
                    </productlabel_connector_catalog_search_products_product_detail>
                </observers>
			</spotproduct_index_get_spot_products_product_detail>
			<spotproduct_index_get_spot_products_v2_product_detail>
				<observers>
                    <productlabel_index_get_spot_products_v2_product_detail>
                        <class>productlabel/simicart_observer</class>
                        <method>setSpotProduct</method>
                    </productlabel_index_get_spot_products_v2_product_detail>
                </observers>
			</spotproduct_index_get_spot_products_v2_product_detail>
        </events> 
    </global>
</config>