			form_data.append('isAjax', true);
			form_data.append('form_key',form_key);
			var aurl = "<?php echo Mage::helper('adminhtml')->getUrl('mobiadmin2/widget/uploadajaximage')?>"; 
			jQuery.ajax({
				url: aurl,
				type: 'post',  
				contentType: false,
				processData: false,
				data: form_data,
				success: function(response){
					var iframe = jQuery(".image-map-iframe");
					var data = jQuery.parseJSON(response);
					var imgurl = data.image_url;
					if( imgurl != ''){
						jQuery('#widget_image_hidden').val(imgurl);
