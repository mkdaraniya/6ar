<script>
	var cat = "<?php echo Mage::app()->getRequest()->getParam('cat', false); ?>";
	function createwidget(){
		markWidgetChange();
		new Ajax.Request("<?php echo Mage::helper('adminhtml')->getUrl('mobicommerce2/widget/createwidget'); ?>cat/"+cat, {
			method: 'Post',
			parameters: {isAjax : 1},
			onComplete: function(data) {				    
			},
			onSuccess: function(response){
				var json = response.responseText.evalJSON(true);
				if(json.status == 'success'){
		            jQuery('.content-widget-new').html(json.widget_new_block);
				}
				else{
					alert(json.error);
				}
			},
			onFailure: function(response){
				var json = response.responseText.evalJSON(true);
				alert(json.error);
			}
		});
	}

	function showwidgets(){
		markWidgetChange();
		var url ="<?php echo Mage::helper('adminhtml')->getUrl('mobicommerce2/category/widgetlist'); ?>cat/"+cat;
		new Ajax.Request(url, {
			method: 'Post',
			parameters: {isAjax : 1},
			onComplete: function(data) {
			},
			onSuccess: function(response){
				var json = response.responseText.evalJSON(true);
				if(json.status == 'success'){
		            jQuery('.widget-lists').html(json.widget_list_block);
				}
				else{
					alert(json.error);
				}
			},
			onFailure: function(response){
				var json = response.responseText.evalJSON(true);
				alert(json.error);
			}
		});
	}

	jQuery('.editwidget').click(function( event ) {
		markWidgetChange();
		event.preventDefault();
		var editwidgeturl = jQuery(this).attr('href');
		new Ajax.Request(editwidgeturl, {
			method: 'Post',
			parameters: {isAjax : 1},
			onComplete: function(data) {				    
			},
			onSuccess: function(response){
				var json = response.responseText.evalJSON(true);
				if(json.status == 'success'){
					jQuery('.content-widget-new').html(json.widget_block_content);
				}
				else{
					alert(json.error);
				}
			},
			onFailure: function(response){
				var json = response.responseText.evalJSON(true);
				alert(json.error);
			}
		});
	});
	function markWidgetChange()
	{
		jQuery('#widgetChange').val('1');
	}
</script>